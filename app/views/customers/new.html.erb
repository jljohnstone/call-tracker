<%= turbo_frame_tag "modal" do %>
  <%= tag.div data: { controller: "turbo-modal" }, class: "p-5 bg-slate-300 absolute z-10 rounded-md break-words w-5/6" do %>
    <h1 class="font-bold text-4xl">New customer</h1>
    <%= render "form", customer: @customer %>
    <%= button_tag "Cancel", data: { action: "turbo-modal#hide" }, type: :button, class: "btn btn-secondary" %>
  <% end %>
<% end %>
