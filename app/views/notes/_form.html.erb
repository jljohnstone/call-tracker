<%= form_with(model: note, class: "contents") do |form| %>
  <% if note.customer.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(note.customer.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% elsif note.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <%= form.fields_for :customer do |customer| %>
  <div>
    <%= customer.label :phone_number %>
    <%= customer.telephone_field :phone_number %>
  </div>
  <div>
    <%= customer.label :name %>
    <%= customer.text_field :name %>
  </div>
  <% end %>

  <div>
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.order(:name), :id, :name, { include_blank: true } %>
  </div>

  <div>
    <%= form.label :done %>
    <%= form.check_box :done %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
