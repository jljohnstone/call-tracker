<div>
  <div class="flex justify-between items-center pb-3 gap-6 mb-6">
    <h1 class="flex-initial font-bold text-2xl">Call Notes</h1>
    <%= link_to 'New note', new_note_path, data: { turbo_frame: "modal" }, class: "flex-auto btn btn-secondary" %>
  </div>

  <div data-controller="tab">
    <div class="tabs">
      <a class="tab tab-bordered" data-tab-target="incompleteTab" data-action="click->tab#showIncomplete">Incomplete</a>
      <a class="tab tab-bordered" data-tab-target="completeTab" data-action="click->tab#showComplete">Complete</a>
    </div>
    <div id="incompleted-notes" data-tab-target="incompleteNotes">
      <%= render @incompleted_notes %>
    </div>
    <div id="completed-notes" data-tab-target="completeNotes">
      <%= render @completed_notes %>
    </div>
  </div>
</div>
