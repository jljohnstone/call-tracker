<div id="<%= dom_id note %>">
  <%= link_to edit_note_path(note), data: { turbo_frame: "modal" }, class: [ ("flex justify-between items-center my-3 p-3 bg-base-200 rounded"), ("bg-red-200" if note.priority?) ] do %>
    <div class="flex-auto">
      <p class="text-sm"><%= format_date(note.created_at) %>: <%= note.customer.name %></p>
    </div>
    <div class="flex-initial text-right">
    <% if note.assigned_to_user.present? %>
      <p class="btn btn-outline btn-square btn-sm text-white" style="background-color:<%= note.assigned_to_user.color %>"><%= user_initials(note.assigned_to_user.first_name, note.assigned_to_user.last_name) %></p>
    <% end %>
    </div>
  <% end %>
</div>
