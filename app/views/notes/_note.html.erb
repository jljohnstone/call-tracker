<div id="<%= dom_id note %>">
  <%= link_to customer_path(note.customer), class: "flex justify-between items-center my-3 p-3 bg-base-200 rounded" do %>
    <div class="flex-auto">
      <p class="text-sm"><%= note.created_at.strftime("%m/%d/%y - %l:%M %P") %></p>
      <p><%= note.customer.name %></p>
      <div class="flex justify-between items-center text-sm">
        <%# <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="flex-initial w-4 h-4"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" /></svg>
        <span class="flex-auto">Note</span> %>
      </div>
    </div>
    <div class="flex-initial text-right">
    <% if note.user.present? %>
      <p class="badge badge-lg badge-outline"><%= note.user.initials %></p>
    <% end %>
    <!--<p><%= note.done? ? "DONE" : "NOT DONE" %></p>-->
    </div>
  <% end %>
</div>
