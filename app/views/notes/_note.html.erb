<div id="<%= dom_id note %>">
  <p>
    <%= note.content %>
  </p>

  <p>
    <%= note.customer_id %>
  </p>

  <p>
    <%= note.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this note", note %>
    <%= link_to 'Edit this note', edit_note_path(note) %>
    <hr class="mt-6">
  <% end %>
</div>
