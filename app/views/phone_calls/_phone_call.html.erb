<div id="<%= dom_id phone_call %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Customer:</strong>
    <%= phone_call.customer_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= phone_call.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this phone call", phone_call, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this phone call', edit_phone_call_path(phone_call), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
