<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center border-b-2 pb-3">
    <h1 class="font-bold text-2xl">Phone calls</h1>
    <%= link_to 'New phone call', new_phone_call_path, class: "rounded py-2 px-3 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="phone_calls" class="min-w-full">
    <%= render @phone_calls %>
  </div>
</div>
