<div>
  <%= form_with url: "/search", method: :get do |form| %>
    <%= form.text_field :q, value: params[:q] %>
    <%= form.submit "Search", class: "btn btn-primary" %>
  <% end %>

  <% if @results %>
    <h2 class="font-bold text-2xl">Results (work in progress)</h2>
    <ul>
    <% @results.each do |result| %>
      <%
        if result.searchable_type == "Customer"
          show_path = customer_path(result.searchable_id)
        elsif result.searchable_type == "Note"
          show_path = note_path(result.searchable_id)
        end
      %>
      <li><%= link_to result.content, show_path, class: "underline text-blue-500" %></li>
    <% end %>
    </ul>
  <% end %>

</div>
